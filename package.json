{
    "name": "Upload",
    "version": "1.0.1",
    "license": "MIT",
    "author": "lleohao <lleohao@hotmail.com>",
    "description": "A file upload app for qiniu",
    "scripts": {
        "ng": "ng",
        "watch:main": "tsc -p ./src/main/tsconfig.main.json -w",
        "watch:renderer": "ng serve",
        "start": "NODE_ENV=development nodemon --watch out --exec './node_modules/.bin/electron' ./out/main.js",
        "build": "ng build && tsc -p ./src/main/tsconfig.main.json && npm run dist",
        "pack": "electron-builder -m --dir",
        "dist": "electron-builder -m",
        "postinstall": "electron-builder install-app-deps"
    },
    "main": "out/main.js",
    "private": true,
    "dependencies": {
        "@angular/animations": "^5.2.0",
        "@angular/common": "^5.2.0",
        "@angular/compiler": "^5.2.0",
        "@angular/core": "^5.2.0",
        "@angular/forms": "^5.2.0",
        "@angular/http": "^5.2.0",
        "@angular/platform-browser": "^5.2.0",
        "@angular/platform-browser-dynamic": "^5.2.0",
        "@angular/platform-server": "^5.2.0",
        "@angular/router": "^5.2.0",
        "core-js": "^2.4.1",
        "electron-settings": "^3.1.1",
        "qiniu": "^7.0.8",
        "rxjs": "^5.4.2",
        "zone.js": "^0.8.14"
    },
    "devDependencies": {
        "@angular/cli": "1.6.4",
        "@angular/compiler-cli": "^5.2.0",
        "@angular/language-service": "^5.2.0",
        "@types/node": "~9.3.0",
        "codelyzer": "~4.0.2",
        "electron": "1.7.10",
        "electron-builder": "^19.20.1",
        "mockjs": "^1.0.1-beta3",
        "ts-node": "~4.1.0",
        "tslint": "~5.9.1",
        "typescript": "~2.6.2"
    },
    "build": {
        "appId": "com.lleohao.dragUpload",
        "mac": {
            "category": "public.app-category.productivity"
        }
    }
}
